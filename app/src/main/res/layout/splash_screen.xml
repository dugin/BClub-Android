<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_splash_screen"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/ic_logo_splash_screen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/splash_screen_title"
            fontPath="fonts/OpenSans-Light.ttf"
            tools:ignore="MissingPrefix" />

        <LinearLayout
            android:id="@+id/indicator_containers"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/tutorial_indicator"
                tools:ignore="ButtonStyle" />

            <Button
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/tutorial_indicator"
                tools:ignore="ButtonStyle" />

            <Button
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/tutorial_indicator"
                tools:ignore="ButtonStyle" />

            <Button
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/tutorial_indicator"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>